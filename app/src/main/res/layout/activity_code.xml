<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
   android:padding="@dimen/code_layout_padding"
    tools:context="com.purplesq.sagar.tourmanager.CodeActivity">

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/code_textview"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_above="@+id/code_edittext"
        android:textColor="@android:color/white"
        android:id="@+id/code_textview"/>
    <EditText
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textCursorDrawable="@drawable/cursor"
        android:background="@drawable/code_edit_background"
        android:layout_width="match_parent"
        android:layout_above="@+id/event_button"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@id/code_edittext"
        android:inputType="textCapCharacters" />

    <Button
        android:id="@id/event_button"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        android:background="@color/get_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/event_button"/>
    <ProgressBar
        android:id="@+id/progressbar"
        android:progressTint="@color/get_code_button"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/event_button"/>
</RelativeLayout>
